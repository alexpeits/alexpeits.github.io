<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="application/atom+xml" rel="alternate" href="{{ host }}/atom.xml" title="{{ site_title }}" />
    <link rel="shortcut icon" type="image/png" href="/images/favicon.png"/>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;600&family=Raleway:ital,wght@0,400;0,600;1,400;1,600&family=Source+Serif+Pro:ital,wght@0,400;0,700;1,400;1,700&display=swap">
    <link rel="stylesheet" href="/css/default.css">
    {{# highlight_pygments }}
    <link rel="stylesheet" href="/css/code_pygments.css">
    {{/ highlight_pygments }}
    {{# highlight_default }}
    <link rel="stylesheet" href="/css/code_default.css">
    {{/ highlight_default }}
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"></script>
    <script src="/js/dark-mode.js"></script>
    <script src="/js/footnotes.js" async></script>
    <script src="https://kit.fontawesome.com/f39770a341.js" crossorigin="anonymous">
    </script>
    <script type="text/x-mathjax-config">
     MathJax.Hub.Config({
       "HTML-CSS": { linebreaks: { automatic: true } },
       SVG: { linebreaks: { automatic: true } },
       messageStyle: "none"
     });
    </script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.0/MathJax.js?config=TeX-AMS-MML_HTMLorMML"
      type="text/javascript"
      async>
    </script>
    {{# highlight_prismjs }}
    <link href="/css/code_prismjs.css" rel="stylesheet">
    <script
      src="https://unpkg.com/prismjs@1.23.0/components/prism-core.min.js"
      type="text/javascript" async>
    </script>
    <script
      src="https://unpkg.com/prismjs@1.23.0/plugins/autoloader/prism-autoloader.min.js"
      type="text/javascript" async>
    </script>
    <script
      src="https://unpkg.com/prismjs@1.23.0/plugins/line-highlight/prism-line-highlight.min.js"
      type="text/javascript" async>
    </script>
    <script
      src="https://unpkg.com/prismjs@1.23.0/plugins/diff-highlight/prism-diff-highlight.min.js"
      type="text/javascript" async>
    </script>
    {{/ highlight_prismjs }}
    <title>{{ site_title }} - {{ title }}</title>
  </head>
  <body>
    <header>
      <div class="logo">
        <a href="/">{{ site_title }}</a>
      </div>
      <nav>
        {{# nav }}
          <a class="nav-link" href="{{ url }}">{{ name }}</a>
        {{/ nav }}
        <span id="dark-mode-toggle" class="far fa-moon dark-mode-disabled" onclick="toggleDarkMode()"></span>
      </nav>
    </header>

    <main role="main">
      <h1 id="title">{{ title }}</h1>
      {{& content }}
    </main>

    <footer>
      <span class="copyright">{{ copyright }}</span>
      <a class="footer-icon" href="/atom.xml">
        <span class="fas fa-rss"></span>
      </a>
    </footer>
  </body>
</html>
